generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categories {
  id                  String        @id @default(uuid())
  categoryName        String
  categoryImage       String      
  menus               Menus[]
  isActive            Boolean       @default(true)
  createdAt           DateTime      @default(now())
  createdBy           String
  updatedAt           DateTime?
  updatedBy           String?
}

model Menus {
  id                  String        @id @default(uuid())
  menuName            String
  menuDescription     String
  price               Int
  menuImage           String
  isFavourite         Boolean       
  
  categoryId          String
  category            Categories    @relation(fields: [categoryId], references: [id])

  isActive            Boolean       @default(true)
  createdAt           DateTime      @default(now())
  createdBy           String
  updatedAt           DateTime?
  updatedBy           String?  
}